<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LargePlaceHolderText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    </style>

    <style name="MediumPlaceHolderText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?attr/textAppearanceBodyMedium</item>
    </style>

    <style name="LessOpaqueText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline3</item>
    </style>

    <style name="Divider" parent="">
        <item name="android:background">?attr/dividerVertical</item>
    </style>

    <style name="AddFragmentStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/lightBrown</item>
    </style>

    <style name="ViewFragmentStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>